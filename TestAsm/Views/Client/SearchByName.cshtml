@model IEnumerable<TestAsm.Models.Product>
@if (Model.ToList().Count != 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="@item.Image" style="width:50px;" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Add Cart", "AddToCart", "ShoppingCart", new { productId = item.Id, quantity = 1 }, null) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>}
    if (!String.IsNullOrEmpty(ViewBag.txtSearch))
    {
        <tr>
            <td colspan="7">
                <center>
                    Tìm thấy <b class="text-primary">@Model.ToList().Count</b> kết quả phù hợp từ khóa <b class="text-primary">@ViewBag.txtSearch</b>
                </center>
            </td>
        </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="7"><center>Không tìm thấy kết quả phù hợp từ khóa <b class="text-primary">@ViewBag.txtSearch </b></center></td>
        </tr>}
