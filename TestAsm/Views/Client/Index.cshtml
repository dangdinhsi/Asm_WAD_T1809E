@model IEnumerable<TestAsm.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>HomePage</h2>
<a href="/ShoppingCart/Showcart">
    <img src="https://lh3.googleusercontent.com/proxy/cMCtSOTZfpyOo3rzMSFeqHl3gz3htGvNv5j8V5Fy2ccJnrBMjOvDL6tNoZe3n9YuZpiKD6C4VzNZHLbTi72AiFWh4oltI4XAzT7erK-2QA" style="width:20px;" alt="Alternate Text" /><span>Check Cart</span>
</a>

<table class="table">
    <tr>
        <td>
            <form action="/Client/SearchName" method="get">
                <input type="text" name="txtSearch" value="" />
                <input type="submit" value="Search" />
            </form>
        </td>
        <td>
            @using (Html.BeginForm("SearchCategory", "Client", FormMethod.Get))
            {
                @Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)ViewBag.CategoryId, null, new { onchange = "this.form.submit();", @class = "form-control" })
            }
        </td>
        <td>@Html.ActionLink("Hiển thị tất cả", "Index", "Client", new { @class = "btn btn-success" })</td>
    </tr>
</table>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="@item.Image" style="width:50px;" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Add Cart", "AddToCart", "ShoppingCart", new { productId = item.Id, quantity = 1 }, null) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>

